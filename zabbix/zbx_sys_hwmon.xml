<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>5.0</version>
    <date>2021-04-28T14:25:51Z</date>
    <groups>
        <group>
            <name>Linux servers</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template Linux SYS_HWMON</template>
            <name>Template Linux SYS_HWMON</name>
            <description>Read: /sys/class/hwmon</description>
            <groups>
                <group>
                    <name>Linux servers</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>SYS_Temp</name>
                </application>
            </applications>
            <discovery_rules>
                <discovery_rule>
                    <name>CPU_Temp</name>
                    <key>sys_hwmon</key>
                    <delay>5m</delay>
                    <filter>
                        <conditions>
                            <condition>
                                <macro>{#CPU_ID}</macro>
                                <value>^temp*</value>
                                <formulaid>A</formulaid>
                            </condition>
                        </conditions>
                    </filter>
                    <lifetime>1d</lifetime>
                    <item_prototypes>
                        <item_prototype>
                            <name>CPU_Temp_{#CPU_ID}</name>
                            <key>sys_hwmon[{#CPU_ID}]</key>
                            <history>7d</history>
                            <trends>15d</trends>
                            <value_type>FLOAT</value_type>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last()}&gt;=95</expression>
                                    <recovery_mode>RECOVERY_EXPRESSION</recovery_mode>
                                    <recovery_expression>{last()}&lt;95</recovery_expression>
                                    <name>CPU_Temp_{#CPU_ID}_Disaster</name>
                                    <priority>DISASTER</priority>
                                </trigger_prototype>
                                <trigger_prototype>
                                    <expression>{last()}&gt;=80</expression>
                                    <recovery_mode>RECOVERY_EXPRESSION</recovery_mode>
                                    <recovery_expression>{last()}&lt;80</recovery_expression>
                                    <name>CPU_Temp_{#CPU_ID}_High</name>
                                    <priority>HIGH</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                    <lld_macro_paths>
                        <lld_macro_path>
                            <lld_macro>{#CPU_ID}</lld_macro>
                            <path>$.cpu_id</path>
                        </lld_macro_path>
                    </lld_macro_paths>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.data</params>
                        </step>
                    </preprocessing>
                    <overrides>
                        <override>
                            <name>Stop processing</name>
                            <step>1</step>
                            <stop>STOP</stop>
                            <filter>
                                <conditions>
                                    <condition>
                                        <macro>{#CPU_ID}</macro>
                                        <value>^temp*</value>
                                        <formulaid>A</formulaid>
                                    </condition>
                                </conditions>
                            </filter>
                            <operations>
                                <operation>
                                    <operationobject>TRIGGER_PROTOTYPE</operationobject>
                                    <value>None</value>
                                    <discover>NO_DISCOVER</discover>
                                </operation>
                            </operations>
                        </override>
                    </overrides>
                </discovery_rule>
            </discovery_rules>
        </template>
    </templates>
</zabbix_export>
